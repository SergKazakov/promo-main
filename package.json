{
  "name": "promo-main",
  "homepage": "https://embermvp.com",
  "scripts": {
    "git:add": "git add -A",
    "lint:js": "eslint --ignore-path .gitignore --fix .",
    "lint:css": "stylefmt -R web_modules && stylelint \"web_modules/**/*.css\"",
    "lint": "npm-run-all --parallel lint:*",
    "start": "phenomic start",
    "build": "phenomic build",
    "pretest": "npm run lint",
    "test": "npm run build",
    "deploy": "npm test && node ./scripts/deploy.js"
  },
  "pre-commit": [
    "test",
    "git:add"
  ],
  "contactUrl": "https://docs.google.com/forms/d/1PMAvWDgx8buxlQyHPjP7dRwsCI7fnWbFGovquu9pzCs/formResponse",
  "googleAnalyticsUA": "UA-77743196-1",
  "yandexMetrika": "37365815",
  "phenomic": {
    "assets": false,
    "CNAME": true,
    "open": false,
    "devPort": 3000
  },
  "babel": {
    "presets": [
      "babel-preset-react",
      "babel-preset-es2015",
      "babel-preset-stage-1"
    ],
    "env": {
      "production": {
        "presets": [
          "babel-preset-react-optimize"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint-config-i-am-meticulous/react"
    ],
    "rules": {
      "react/prefer-stateless-function": 0,
      "react/prop-types": [
        1,
        {
          "ignore": [
            "children",
            "className"
          ]
        }
      ],
      "react/jsx-no-bind": [
        1,
        {
          "ignoreRefs": true
        }
      ]
    },
    "globals": {
      "React": false,
      "ReactDOM": false,
      "Helmet": false
    }
  },
  "eslintConfigRuleReact/prefer-stateless-function": "https://github.com/MoOx/phenomic/issues/46",
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes",
            "triangle"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.0.0-beta.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.0.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-1": "^6.13.0",
    "css-loader": "^0.24.0",
    "eslint": "^3.4.0",
    "eslint-config-i-am-meticulous": "^4.1.1",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-react": "^6.2.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "ftp-deploy": "^1.1.0",
    "invariant": "^2.1.1",
    "json-loader": "^0.5.2",
    "npm-run-all": "^3.0.0",
    "phenomic": "^0.16.2",
    "postcss-center": "^1.0.0",
    "postcss-cssnext": "^2.4.0",
    "postcss-flexbugs-fixes": "^2.0.0",
    "postcss-font-magician": "^1.4.0",
    "postcss-import": "^8.1.2",
    "postcss-loader": "^0.11.1",
    "postcss-sorting": "^1.6.1",
    "postcss-triangle": "^1.0.1",
    "pre-commit": "^1.1.3",
    "raw-loader": "^0.5.1",
    "style-loader": "^0.13.1",
    "stylefmt": "^4.2.3",
    "stylelint": "^7.2.0",
    "stylelint-config-standard": "^13.0.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.2"
  },
  "dependencies": {
    "animate.css": "^3.5.1",
    "classnames": "^2.2.5",
    "formsy-material-ui": "^0.5.0",
    "formsy-react": "^0.18.1",
    "history": "^2.0.2",
    "material-ui": "^0.15.4",
    "normalize.css": "^4.2.0",
    "promise.prototype.finally": "^2.0.0",
    "radium": "^0.18.1",
    "react": "^15.3.1",
    "react-burger-menu": "^1.10.4",
    "react-dom": "^15.3.1",
    "react-google-analytics": "^0.2.0",
    "react-helmet": "^3.0.0",
    "react-redux": "^4.0.0",
    "react-responsive": "^1.1.4",
    "react-router": "^2.7.0",
    "react-scroll": "^1.3.0",
    "react-slick": "^0.13.3",
    "react-svg-inline": "^1.1.0",
    "react-tap-event-plugin": "^1.0.0",
    "react-toastr": "^2.8.0",
    "react-topbar-progress-indicator": "^1.0.0",
    "react-ym": "0.0.7",
    "redux": "^3.0.0",
    "slick-carousel": "^1.6.0",
    "toastr": "^2.1.2",
    "whatwg-fetch": "^1.0.0"
  }
}
